  float temp;
  float humidity;
  int uv;
  sscanf(rxpacket, "%f,%f,%d", &temp, &humidity, &uv);

  // Exibe o valor da temperatura
  display.drawString(0, 26, "Temperatura: " + String(temp, 2) + " °C");

