void LoRaData() {
  display.clear();
  display.setTextAlignment(TEXT_ALIGN_LEFT);
  display.setFont(ArialMT_Plain_10);

  // Exibe o IP do Broker
  display.drawString(0, 0, "Broker IP: " + String(mqttServer));

  // Exibe o tamanho da mensagem recebida
